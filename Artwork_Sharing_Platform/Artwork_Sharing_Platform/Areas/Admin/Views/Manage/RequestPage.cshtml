
@{
    ViewBag.Title = "RequestPage";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdminPage.cshtml";
}

<h2>RequestPage</h2>

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">RequestPage</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <div class="row">
            
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="table-responsive">
                                <table id="transactionTable" class="table table-bordered table-hover table-striped">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>UserId</th>
                                            <th>Description</th>
                                            <th>Status</th>
                                            <th>Rejected</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    </tbody>
                                </table>
                            </div>
                            <!-- /.table-responsive -->
                        </div>
                    </div>
                </div>
            
        </div>
    </div>
</div>
<script>
    fetch('https://localhost:7008/api/Request/GetAllRequest')
        .then(response => response.json())
        .then(data => {
            const tbody = document.querySelector('#transactionTable tbody');

            data.dataObject.forEach((transaction, index) => {
                const row = document.createElement('tr');

                const idCell = document.createElement('td');
                idCell.textContent = index + 1;
                row.appendChild(idCell);

                const userIdCell = document.createElement('td');
                userIdCell.textContent = transaction.userId;
                row.appendChild(userIdCell);

                const descriptionCell = document.createElement('td');
                descriptionCell.textContent = transaction.description;
                row.appendChild(descriptionCell);

                const statusCell = document.createElement('td');
                statusCell.textContent = transaction.status ? "Approved" : "Rejected";
                row.appendChild(statusCell);

                const actionCell = document.createElement('td');


                if (transaction.status) {
                    const rejectButton = document.createElement('button');
                    rejectButton.textContent = 'Reject';
                    rejectButton.addEventListener('click', () => rejectRequest(transaction.RequestId));
                    actionCell.appendChild(rejectButton);

                    row.appendChild(actionCell);
                }
                
                tbody.appendChild(row);
            });
        })
        .catch(error => console.error('Error fetching transactions:', error));



    function rejectRequest(requestId) {
        fetch(`https://localhost:7008/api/Request/UpdateStatusRequest?requestId=${requestId}`, {
            method: 'PUT',
        })
            .then(response => response.json())
            .then(data => {
                if (data.Status === 'Success') {
                    alert('Request rejected successfully');
                    window.location.reload();
                } else {
                    alert('Error rejecting request');
                }
            })
            .catch(error => console.error('Error rejecting request:', error));
    }
</script>