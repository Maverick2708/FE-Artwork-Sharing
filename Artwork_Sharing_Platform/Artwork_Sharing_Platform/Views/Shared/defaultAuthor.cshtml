<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title> - Pintereso Bootstrap Template</title>
    <script type="text/javascript">(function () { var css = document.createElement('link'); css.href = 'https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css'; css.rel = 'stylesheet'; css.type = 'text/css'; document.getElementsByTagName('head')[0].appendChild(css); })();</script>
    <link rel="stylesheet" href="~/Assets/template-pintereso-bootstrap-html-master/docs/assets/css/app.css">
    <link rel="stylesheet" href="~/Assets/template-pintereso-bootstrap-html-master/docs/assets/css/theme.css">
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <style>
        #backgroundProfile {
            background-position: center;
            background-size: cover; /* This ensures the image covers the entire element */
        }
        .profile {
            position: relative;
            display: inline-block;
        }
        .inline {
            display: inline;
        }
        #circleButton {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            background-color: rgba(52, 152, 219, 0.5);
            color: #fff;
            border: none;
            cursor: pointer;
            outline: none;
        }
         input {
            margin-bottom: 10px;
            width: 100%;
            padding: 8px;
        }
        .popup {
            display: none;
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            padding: 20px;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
            z-index: 1000;
        }

        /* Styles for close button */
        .close-btn {
            position: absolute;
            top: 10px;
            right: 10px;
            cursor: pointer;
        }
    </style>
</head>

<body>
    @RenderPage("~/Views/Shared/Navigation.cshtml")



    <main role="main">
        @RenderBody()


    </main>
    @RenderPage("~/Views/Shared/Footer.cshtml")

</body>

</html>
